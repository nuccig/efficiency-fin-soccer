# AWS Region
aws_region = "us-east-1"

# Project Configuration
project_name = "efficiency-fin-soccer"
environment  = "dev"

# Service Toggles (para analytics, mantenha ambos como false)
enable_rds = false  # RDS não necessário para analytics (S3 + Athena é suficiente)
enable_vpc = false  # VPC não necessário para S3/Glue/Athena (apenas se usar RDS)

